<% is_manager = current_user.has_role? :manager %>

<h1>Plans</h1>
<% if is_manager %>
    <%= link_to 'Create Plan', new_plan_path %>
<% end %>

<ul>
    <% has_role = current_user.has_role? :manager %>
    <% @plans.each do |plan| %>
    <li>
        <b>Name: </b><%= plan.name %> |
        <b>monthly_fee: </b><%= plan.monthly_fee %> |
        <b>Name: </b><%= plan.manager_id %>
        <b>features: </b><%= plan.features.count %> |
        <b>Link to: </b><%= link_to 'Details', plan_path(plan) %> |
        <% if is_manager %>
        <%= link_to 'Edit', edit_plan_path(plan) %> |
        <%= link_to 'Delete', plan_path(plan), method: :delete %>
        <% end %>
    </li>
    <% end %>
</ul>