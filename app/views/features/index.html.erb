<div class="card">
    <div class="card-header pb-0 px-3">
    <div class="row">
        <div class="col-6 d-flex align-items-center">
            <h6 class="mb-0">Features Inforamtion</h6>
        </div>
        <div class="col-6 text-end">
            <a class="btn btn-outline-primary btn-sm mb-0", href='<%= new_feature_path %>'>Create feature</a>
        </div>
    </div>
    </div>
    <% is_manager = current_user.has_role? :manager %>
    <div class="card-body pt-4 p-3">
        <ul class="list-group">
            <% @features.each do |feature| %>
                <li class="list-group-item border-0 d-flex p-4 mb-2 bg-gray-100 border-radius-lg">
                    <div class="d-flex flex-column">
                        <h6 class="mb-3 text-sm"><%= link_to feature.name, feature %></h6>
                        <span class="mb-2 text-xs">Feature Code: 
                            <span class="text-dark font-weight-bold ms-sm-2"><%= feature.code %></span>
                        </span>
                        <span class="mb-2 text-xs">feature Unit Price:  
                            <span class="text-dark ms-sm-2 font-weight-bold">$<%= feature.unit_price %></span>
                        </span>
                        <span class="text-xs">Owner Email: 
                            <span class="text-dark ms-sm-2 font-weight-bold"><%= feature.manager.email %></span>
                        </span>
                    </div>
                    <% if is_manager %>
                    <div class="ms-auto text-end">
                        <a class="btn btn-link text-danger text-gradient px-3 mb-0" href="<%= feature_path(feature)%>" data-method="delete">
                            <i class="far fa-trash-alt me-2" aria-hidden="true"></i> Delete
                        </a>
                        <a class="btn btn-link text-dark px-3 mb-0" href="<%= new_feature_path(feature)%>">
                            <i class="fas fa-pencil-alt text-dark me-2" aria-hidden="true"></i> Edit
                        </a>
                    </div>
                    <% end %>
                </li>
            <% end %>
        </ul>
    </div>
</div>